      <div class="navbar-nav ms-auto">
        <a class="nav-link {% if page.url == '/' %}active{% endif %}" href="/">Home</a>
        <a class="nav-link {% if page.url == '/blog/' %}active{% endif %}" href="/blog/">Blog</a>
